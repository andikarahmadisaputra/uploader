<%- include('./partials/header', {title: "Home"}) %> <%-
include('./partials/navbar') %>

<div class="container">
  <div class="row mt-4">
    <div class="col-md-12">
      <% if (error_msg) { %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% error_msg.forEach(msg => { %>
          <li><%= msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %> <% if (success_msg) { %>
      <div class="alert alert-success"><%= success_msg %></div>
      <% } %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-12">
      <form action="/upload" method="post" enctype="multipart/form-data">
        <div class="input-group mb-3">
          <input
            type="file"
            class="form-control"
            placeholder="Select file"
            name="file"
          />
          <button class="btn btn-primary" type="submit">Upload</button>
        </div>
      </form>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12">
      <h2>Owned File</h2>
      <form action="/owned" method="get">
        <div class="input-group mb-3">
          <input
            type="text"
            class="form-control"
            placeholder="Search"
            name="search"
          />
          <button class="btn btn-primary" type="submit">Search</button>
        </div>
      </form>
      <div class="table-responsive text-nowrap">
        <table class="table table-striped">
          <thead>
            <tr>
              <td>ID</td>
              <th>Name</th>
              <th>Created At</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% user.OwnedFile.filter((file) => file.name.toLowerCase().includes(search.toLowerCase())).forEach(el => { %>
            <tr>
              <td><%= el.id %></td>
              <td><%= el.name %></td>
              <td><%= el.createdDate %></td>
              <td>
                <div class="btn-group">
                  <a href="/owned/<%= el.id %>/download" class="btn btn-outline-success"
                    >Download</a
                  >
                  <a href="/owned/<%= el.id %>/share" class="btn btn-outline-primary"
                    >Share</a
                  >
                  <a href="/owned/<%= el.id %>/delete" class="btn btn-outline-danger"
                    >Delete</a
                  >
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script>
  document.querySelectorAll(".btn-outline-danger").forEach((btn) => {
    btn.addEventListener("click", function (e) {
      e.preventDefault();
      const confirmed = confirm("Are you sure you want to delete this file?");
      if (confirmed) {
        window.location.href = this.href;
      }
    });
  });
</script>

<%- include('./partials/footer') %>
