<%- include('./partials/header', {title: "Update Profile"}) %>
<%- include('./partials/navbar') %>

<div
  class="bg-light d-flex align-items-center justify-content-center"
  style="height: 100vh"
>
  <div class="card shadow p-4" style="max-width: 400px; width: 100%">
    <h4 class="text-center mb-4">Update Profile</h4>

    <!-- Flash message -->
    <% if (error_msg) { %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% error_msg.forEach(msg => { %>
        <li><%= msg %></li>
        <% }) %>
      </ul>
    </div>
    <% } %> <% if (success_msg) { %>
    <div class="alert alert-success"><%= success_msg %></div>
    <% } %>

    <form action="/change-profile" method="POST" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          value="<%= user.username %>"
          required
        />
      </div>

      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          name="name"
          id="name"
          class="form-control"
          value="<%= user.name %>"
          required
        />
      </div>

      <div class="mb-3">
        <label for="gender" class="form-label">Gender</label>
        <select name="gender" id="gender" class="form-select">
            <% ["male", "female"].forEach(el => { %>
             <option value="<%= el %>" <%= el === user.gender ? "selected" : "" %>><%= el %></option>
            <% }) %>
        </select>
      </div>

      <button type="submit" class="btn btn-primary w-100"><i class="bi bi-save-fill"></i> Update</button>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>
