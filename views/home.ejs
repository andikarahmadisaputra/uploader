<%- include('./partials/header', {title: "Home"}) %> <%-
include('./partials/navbar') %>

<div class="container">
  <div class="row mt-4">
    <div class="col-md-12">
      <% if (error_msg) { %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% error_msg.forEach(msg => { %>
          <li><%= msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %> <% if (success_msg) { %>
      <div class="alert alert-success"><%= success_msg %></div>
      <% } %>
    </div>
  </div>
</div>

<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="display-5 fw-bold">
      <i class="bi bi-cloud-arrow-up"></i> Welcome to Your Personal File Manager
    </h1>
    <p class="lead">Manage your files with ease and security.</p>
  </div>

  <div class="row g-4 text-center">
    <div class="col-md-4">
      <div class="p-4 border rounded shadow-sm">
        <i class="bi bi-upload fs-1 text-primary"></i>
        <h5 class="mt-3">Upload Files</h5>
        <p>Quickly upload files to store them securely in your account.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="p-4 border rounded shadow-sm">
        <i class="bi bi-download fs-1 text-success"></i>
        <h5 class="mt-3">Download Files</h5>
        <p>Access and download your files anytime, anywhere.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="p-4 border rounded shadow-sm">
        <i class="bi bi-share fs-1 text-info"></i>
        <h5 class="mt-3">Share Files</h5>
        <p>Share your files with other users securely and easily.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="p-4 border rounded shadow-sm">
        <i class="bi bi-search fs-1 text-warning"></i>
        <h5 class="mt-3">Search Files</h5>
        <p>Find files quickly using the search feature.</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="p-4 border rounded shadow-sm">
        <i class="bi bi-trash fs-1 text-danger"></i>
        <h5 class="mt-3">Delete Files</h5>
        <p>Remove files you no longer need with one click.</p>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
